<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:textDirection="ltr"
        android:background="@color/black"
        tools:context=".view.NoteMainPage">

        <LinearLayout
            android:id="@+id/lin_app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_save"
                android:layout_width="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="@color/blackWhite"
                app:cardCornerRadius="@dimen/_15sdp"
                android:visibility="gone"
                tools:ignore="MissingConstraints">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    tools:ignore="MissingConstraints">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_trash"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/blackWhite"
                app:cardCornerRadius="@dimen/_10sdp"
                android:visibility="gone"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_trash"
                    android:padding="@dimen/_5sdp"
                    tools:ignore="MissingConstraints">

                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/blackWhite"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_edit"
                    android:padding="@dimen/_5sdp"
                    tools:ignore="MissingConstraints">

                </ImageView>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/blackWhite"
                app:cardCornerRadius="@dimen/_15sdp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_left"
                    tools:ignore="MissingConstraints">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/lin_app_bar"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                tools:text="text lfdmkkdmsa;l"
                android:textColor="@color/blackWhite"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/lin_time"
            tools:ignore="DuplicateIds">
            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="title"
                android:textColor="@color/white"
                android:textColorHint="@color/blackWhite"
                android:visibility="gone"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/lin_app_bar"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:textCursorDrawable="@color/white"
                />
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="top"
            android:padding="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/fl_title"
            tools:ignore="MissingConstraints">
            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="write text note"
                android:visibility="gone"
                android:gravity="top"
                android:textColor="@color/blackWhite"
                android:textColorHint="@color/blackWhite"
                android:background="@android:color/transparent"

                />
            <TextView
                android:id="@+id/txt_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textColor="@color/blackWhite"
                android:textColorHint="@color/blackWhite"
                android:background="@android:color/transparent"
                />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
